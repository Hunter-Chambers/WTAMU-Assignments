<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <!-- row 1 -->
    <TextView
        android:id="@+id/fname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias=".1"
        android:layout_marginStart="25dp"
        android:text="First Name"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/fname_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/left_paren"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/fname_tv"
        android:inputType="text"
        android:textSize="20sp"
        />

    <!-- row 2 -->
    <TextView
        android:id="@+id/lname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fname_tv"
        app:layout_constraintVertical_bias=".17"
        android:text="Last Name"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/lname_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/left_paren"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/lname_tv"
        android:inputType="text"
        android:textSize="20sp"
        />

    <!-- row3 -->
    <TextView
        android:id="@+id/number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lname_tv"
        app:layout_constraintVertical_bias=".24"
        android:text="Phone Number"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/left_paren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/number_tv"
        app:layout_constraintLeft_toRightOf="@id/number_tv"
        android:layout_marginStart="25dp"
        android:text="("
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/area_code"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/left_paren"
        app:layout_constraintBaseline_toBaselineOf="@+id/left_paren"
        android:maxLength="3"
        android:inputType="phone"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/right_paren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/number_tv"
        app:layout_constraintLeft_toRightOf="@id/area_code"
        android:text=")"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/num_prefix"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/right_paren"
        app:layout_constraintBaseline_toBaselineOf="@+id/left_paren"
        android:layout_marginStart="5dp"
        android:maxLength="3"
        android:inputType="phone"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/number_tv"
        app:layout_constraintLeft_toRightOf="@id/num_prefix"
        android:layout_marginStart="5dp"
        android:text="-"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/four_digs"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/dash"
        app:layout_constraintBaseline_toBaselineOf="@+id/left_paren"
        android:layout_marginStart="5dp"
        android:maxLength="4"
        android:inputType="phone"
        android:textSize="20sp"
        />

    <!-- row4 -->
    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bt2"
        app:layout_constraintVertical_bias=".32"
        android:text="Add"
        android:textSize="12sp"
        android:onClick="add"
        android:background="@color/green"
        />
    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bt1"
        app:layout_constraintBottom_toBottomOf="@id/bt1"
        app:layout_constraintLeft_toRightOf="@+id/bt1"
        app:layout_constraintRight_toLeftOf="@id/bt3"
        android:text="Delete"
        android:textSize="12sp"
        android:onClick="delete"
        android:background="@color/red"
        />
    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bt2"
        app:layout_constraintBottom_toBottomOf="@id/bt2"
        app:layout_constraintLeft_toRightOf="@+id/bt2"
        app:layout_constraintRight_toLeftOf="@id/bt4"
        android:text="Clear"
        android:textSize="12sp"
        android:onClick="clear"
        android:background="@color/indigo"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bt3"
        app:layout_constraintBottom_toBottomOf="@id/bt3"
        app:layout_constraintLeft_toRightOf="@+id/bt3"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Show All"
        android:textSize="12sp"
        android:onClick="showAll"
        android:background="@color/cyan"
        />

</androidx.constraintlayout.widget.ConstraintLayout>