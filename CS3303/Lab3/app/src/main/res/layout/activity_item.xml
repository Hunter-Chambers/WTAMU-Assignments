<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity"
    >

    <!-- Row 1 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numOfItems"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias=".05"
        android:layout_marginStart="25dp"
        android:text="Number of item(s): "
        android:textSize="18dp"
        android:textColor="@color/Maroon"
        />

    <!-- Row 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addItemName"
        app:layout_constraintTop_toBottomOf="@id/numOfItems"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/numOfItems"
        app:layout_constraintVertical_bias=".08"
        android:text="Item Name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/Violet"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/addItemInput"
        app:layout_constraintTop_toTopOf="@+id/addItemName"
        app:layout_constraintBottom_toBottomOf="@+id/addItemName"
        app:layout_constraintLeft_toRightOf="@+id/addItemName"
        android:layout_marginStart="40dp"
        android:textSize="20dp"
        android:inputType="textCapWords"
        android:hint="Enter name"
        />

    <!-- Row 3 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addItemPrice"
        app:layout_constraintTop_toBottomOf="@+id/addItemName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/addItemName"
        app:layout_constraintVertical_bias=".04"
        android:text="Item Price"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/Violet"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/addPriceInput"
        app:layout_constraintTop_toTopOf="@+id/addItemPrice"
        app:layout_constraintBottom_toBottomOf="@+id/addItemPrice"
        app:layout_constraintLeft_toLeftOf="@+id/addItemInput"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        android:hint="0.00"
        />

    <!-- Row 4 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addItemQuantity"
        app:layout_constraintTop_toBottomOf="@+id/addItemPrice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/addItemPrice"
        app:layout_constraintVertical_bias=".04"
        android:text="Item Quantity"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/Violet"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/addQuantityInput"
        app:layout_constraintTop_toTopOf="@+id/addItemQuantity"
        app:layout_constraintBottom_toBottomOf="@+id/addItemQuantity"
        app:layout_constraintLeft_toLeftOf="@+id/addItemInput"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        android:hint="0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>